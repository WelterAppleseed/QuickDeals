<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_start_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.StartFragment">

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:visibility="invisible"
        wlv_borderColor="@color/colorGreen"
        wlv_borderWidth="3dp"
        wlv_progressValue="-30"
        wlv_round_rectangle="true"
        wlv_shapeType="circle"
        wlv_titleCenter="Center Title"
        wlv_titleCenterColor="@android:color/white"
        wlv_titleCenterSize="24sp"
        wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        wlv_titleCenterStrokeWidth="3dp"
        wlv_triangle_direction="north"
        wlv_waveAmplitude="70"
        wlv_waveColor="@color/colorGreen"
        android:layout_width="840dp"
        android:layout_height="840dp"
        android:layout_gravity="center" />

    <ImageView
        android:contentDescription="@string/start_activity_image"
        android:id="@+id/wish_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="0"
        android:gravity="center"
        android:src="@drawable/start_text_morning"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/colorBlack" />

</FrameLayout>